<!DOCTYPE html>
<html lang="sw">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>HabariHub - Kiswahili</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f0f2f5;
      margin: 0;
      padding: 0;
      color: #333;
    }

    header {
      background: #0d6efd;
      color: #fff;
      text-align: center;
      padding: 1rem;
    }

    main {
      max-width: 900px;
      margin: 2rem auto;
      padding: 0 1rem;
    }

    .article {
      background: #fff;
      margin-bottom: 2rem;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      overflow: hidden;
    }

    .article img {
      width: 100%;
      max-height: 400px;
      object-fit: cover;
    }

    .article-content {
      padding: 1rem 1.5rem;
    }

    .article h2 {
      font-size: 1.5rem;
      margin: 0 0 0.5rem;
    }

    .article p {
      line-height: 1.6;
    }

    .article a {
      color: #0d6efd;
      text-decoration: none;
      font-weight: bold;
    }

    .date {
      font-size: 0.85rem;
      color: #666;
      margin-top: 0.5rem;
    }

    @media (max-width: 600px) {
      .article h2 {
        font-size: 1.2rem;
      }
    }
  </style>
</head>
<body>
  <header>
    <h1>HabariHub - Habari kwa Kiswahili</h1>
  </header>

  <main>
    <% articles.forEach(article => { %>
      <div class="article">
        <% if (article.image) { %>
          <img src="<%= article.image %>" alt="Article Image">
        <% } %>
        <div class="article-content">
          <h2><%= article.title_sw %></h2>
          <p><%= article.description_sw %></p>
          <p><a href="<%= article.link %>" target="_blank">Soma zaidi</a></p>
          <% if (article.pubDate) { %>
            <p class="date"><%= new Date(article.pubDate).toLocaleString("sw-TZ") %></p>
          <% } %>
        </div>
      </div>
    <% }) %>
  </main>
</body>
</html>
